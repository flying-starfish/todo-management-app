[flake8]
# Maximum line length
max-line-length = 120

# Exclude directories
exclude =
    __pycache__,
    .git,
    .pytest_cache,
    venv,
    env,
    htmlcov,
    db,
    .coverage

# Error codes to ignore
ignore =
    E203,
    E266,
    E501,
    W503,
    W504

# Maximum complexity
max-complexity = 10

# Show source code for errors
show-source = True

# Show error codes in output
show-pep8 = True

# Count errors
count = True

# File-specific ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:E501,F401
